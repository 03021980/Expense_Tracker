@model Expense_Tracker.Model.MonthlyBudget

@{
    Layout = "~/Views/Shared/Basic_Common.cshtml";
}

<!DOCTYPE html>
<html>
<body class="bg-gradient-primary">
    @using (Html.BeginForm("", "AddMonthBudget", FormMethod.Post))
    {
        <div class="container" style="margin: 100px 0px 0px 200px ">
            <div class="box .o-hidden border-0 .shadow-lg col-lg-10">
                <div class="row">
                    <div class="col-lg-7">
                        <img src="~/Content/Images/Add_Month_Expense.png" height="575" width="675" style="background-color:#B4C9C7" />
                        <!---
                            <img src="~/Content/Images/alexander-mils-lCPhGxs7pww-unsplash.jpg" height="400px" width="600px" style="overflow:hidden" /
                        -->
                    </div>
                    <div class="col-lg-5">
                        <div class="" style="margin:130px 50px 0px 65px;">
                            <div class="text-center">
                                <h1 class="h2 text-gray-500" style="text-shadow:1px 1px 2px red,0 0 1em grey,0 0 0.2em grey;"><b>Add Monthly Budget</b></h1>
                            </div>
                            <br />
                            <div style="padding-left:170px;">
                                <a href="/ViewBudget">View Monthly Budget</a>
                            </div>
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select class="form-control form-control-user" name="Month">
                                            <option>Month</option>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option>6</option>
                                            <option>7</option>
                                            <option>8</option>
                                            <option>9</option>
                                            <option>10</option>
                                            <option>11</option>
                                            <option>12</option>
                                        </select>
                                        <!-- <div class="col-sm-6 mb-3 mb-sm-0">
            <input type="text" class="form-control form-control-user" id="Monthly_Month" placeholder="Month" name="Month">
        </div>-->
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select class="form-control form-control-user" name="Year">
                                            <option>Year</option>
                                            <option>2021</option>
                                            <option>2022</option>
                                            <option>2023</option>
                                            <option>2024</option>
                                            <option>2025</option>
                                            <option>2026</option>
                                            <option>2027</option>
                                            <option>2028</option>
                                            <option>2029</option>
                                            <option>2030</option>
                                            <option>2031</option>
                                            <option>2032</option>
                                            <option>2033</option>
                                            <option>2034</option>
                                            <option>2035</option>
                                        </select>
                                        <!-- <div class="col-sm-6 mb-3 mb-sm-0">
            <input type="text" class="form-control form-control-user" id="Monthly_Month" placeholder="Month" name="Month">
        </div>-->
                                    </div>
                                    <!--
    <div class="col-sm-6 mb-3 mb-sm-0">
        <input type="text" class="form-control form-control-user" id="Monthly_Year" placeholder="Year" name="Year">
    </div>
       -->
                                </div>
                                <br />
                                <div>
                                    <input type="number" class="form-control form-control-user" id="MonthLimit" placeholder="Month_Limit" name="MonthExpenseLimit">
                                </div>
                                <br />
                                <div>
                                    <input type="submit" value="Add Expense Limit" class="btn btn-primary btn-user btn-block" style="margin: 20px 90px;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
