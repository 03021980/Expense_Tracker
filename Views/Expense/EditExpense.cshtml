
@{
    Layout = "~/Views/Shared/Basic_Common.cshtml";
}

<!DOCTYPE html>
<html>
<body class="bg-gradient-primary">
    @using (Html.BeginForm("", "SaveExpense", FormMethod.Post))
    {
        <div class="container" style="margin:100px 30px 0px 200px;">
            <div class="box .o-hidden border-0 .shadow-lg col-lg-10">
                <div class="row">
                    <div class="col-lg-7">
                        <img src="~/Content/Images/Add_Expense.png" height="580" width="675" style="background-color:#B4C9C7" />
                        <!---
                            <img src="~/Content/Images/alexander-mils-lCPhGxs7pww-unsplash.jpg" height="400px" width="600px" style="overflow:hidden" /
                        -->
                    </div>
                    <div class="col-lg-5">
                        <div class="" style="margin:30px 50px 50px 50px;">
                            <div class="text-center" style="margin-left:50px;">
                                <h1 class="h1 text-gray-500" style="text-shadow:1px 1px 2px red,0 0 1em grey,0 0 0.2em grey;"><b>Edit Expense</b></h1>
                            </div>
                            <br />
                            <form class="user" style="margin:0px 0px 0px 20px;">
                                <div>
                                    <input type="hidden" class="form-control form-control-user" placeholder="Edit ID" name="ID" value="@Model.ID">
                                </div>
                                <div>
                                    <input type="text" class="form-control form-control-user" placeholder="Edit Title" name="ExpenseTitle" value="@Model.ExpenseTitle">
                                </div>
                                <br />
                                <div>
                                    <input type="text" class="form-control form-control-user" placeholder="Edit Description" name="ExpenseDescription" value="@Model.ExpenseDescription">
                                </div>
                                <br />
                                <div>
                                    <input type="number" class="form-control form-control-user" placeholder="Edit Amount" name="ExpenseAmount" value="@Model.ExpenseAmount">
                                </div>
                                <br />
                                <div>
                                    <select class="form-control form-control-user" value="@Model.ExpenseCategory">
                                        <option>Choose Category</option>
                                        <option>Food</option>
                                        <option>Home</option>
                                        <option>Electricity</option>
                                        <option>Gas</option>
                                        <option>Vehicle</option>
                                        <option>Medicine</option>
                                        <option>Education</option>
                                    </select>
                                    <!--<input type="" class="form-control form-control-user" placeholder="Expense_Category" name="ExpenseCategory">-->
                                </div>
                                <!--<div>
                                    <input type="text" class="form-control form-control-user" placeholder="Edit Category" name="ExpenseCategory" value="@Model.ExpenseCategory">
                                </div>-->
                                <br />
                                <!--
        <div>
        <input type="date" form-control form-control-user id="Expense_Date_Time" style="margin-left:100px">
    </div>
    <br />-->
                                <br />
                                <br />
                                <input type="submit" value="Update Expense" class="btn btn-primary btn-user btn-block" style="margin-left: 80px;" />

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
